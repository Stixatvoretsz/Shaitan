<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/_77" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="#A33737"
                android:text="KOT A TO 4E ON"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#BFD68E21"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:translationY="80dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="189dp"
                android:layout_weight="1"
                android:src="@drawable/_88"
                android:translationX="-35dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#38D516"
                android:text="TOZHE KOT A 4E"
                android:textAlignment="center"
                android:textColor="#1355A1"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:translationX="-30dp"
                android:translationY="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="199dp"
                android:layout_weight="1"
                android:src="@drawable/_673391099_gas_kvas_com_p_anime_risunki_malchikov_kotov_1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#7C0A7C"
                android:text="A TUT NE KOT XAXA"
                android:textAlignment="center"
                android:textColor="#2C1753"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:translationY="80dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>